<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="afens.pr035sqlite.EditActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:id="@+id/lblNombre"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="88dp"
        android:layout_marginEnd="88dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombre"
        android:hint="Nombre"
        android:layout_below="@+id/lblNombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblCurso"
        android:text="Curso"
        android:layout_below="@+id/txtNombre"
        android:layout_marginRight="88dp"
        android:layout_marginEnd="88dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtCurso"
        android:layout_below="@+id/lblCurso"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblTelefono"
        android:text="Telefono"
        android:layout_below="@+id/txtCurso"
        android:layout_marginRight="88dp"
        android:layout_marginEnd="88dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtTelefono"
        android:layout_below="@+id/lblTelefono"
/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblEdad"
        android:text="Edad"
        android:layout_below="@+id/txtTelefono"
        android:layout_marginRight="88dp"
        android:layout_marginEnd="88dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/txtEdad"
android:layout_below="@+id/lblEdad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblDirecion"
        android:text="Direcion"
        android:layout_below="@+id/txtEdad"
        android:layout_marginRight="88dp"
        android:layout_marginEnd="88dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDirecion"
        android:layout_below="@+id/lblDirecion" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblFoto"
        android:text="Foto"
        android:layout_below="@+id/txtDirecion"
        android:layout_marginRight="88dp"
        android:layout_marginEnd="88dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFoto"
        android:layout_below="@+id/lblFoto"
 />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblRepetidor"
        android:text="Repetidor"
        android:layout_below="@+id/txtFoto"
        android:layout_marginRight="88dp"
        android:layout_marginEnd="88dp" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:id="@+id/radioButton"
        android:layout_below="@+id/txtCurso"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New RadioButton"
        android:id="@+id/radioButton2"
        android:layout_below="@+id/radioButton"
        android:layout_alignRight="@+id/txtDirecion"
        android:layout_alignEnd="@+id/txtDirecion" />
</RelativeLayout>
