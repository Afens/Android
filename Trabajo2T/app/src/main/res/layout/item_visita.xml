<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="11dp"
    card_view:cardElevation="5dp">
    <TextView
        android:id="@+id/lblFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginLeftLblFecha"
        android:layout_marginStart="@dimen/marginLeftLblFecha"
        android:textSize="@dimen/textSizeCardView"
        android:text="10/2/2016"
        />
    <TextView
        android:id="@+id/lblHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSizeCardView"
        android:layout_marginRight="@dimen/marginRightLblHora"
        android:layout_marginEnd="@dimen/marginRightLblHora"
        android:layout_gravity="end"
        android:text="10:15-11:15"/>
    <TextView
        android:id="@+id/lblComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopLblResumen"
        android:layout_marginLeft="@dimen/marginLeftLblVisita"
        android:layout_marginStart="@dimen/marginLeftLblVisita"
        android:textSize="@dimen/textSizeCardView"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa aaaaaaaaaaaaaaaaaaaa aaaaaaaaaaaaaaaaaa aaaaaaaaaaaaa "
        />

</android.support.v7.widget.CardView>