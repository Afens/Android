<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="afens.pr022listviewfragment.AddActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="@dimen/tamAvatar"
            android:layout_height="@dimen/tamAvatar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/img_margin"
            android:layout_marginLeft="@dimen/img_margin"
            android:layout_marginRight="@dimen/img_margin"
            android:layout_marginStart="@dimen/img_margin"
            android:layout_marginTop="@dimen/img_margin"
            android:layout_marginBottom="@dimen/img_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_action_picture" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tilEdad"
            android:layout_alignStart="@+id/tilEdad"
            android:layout_toLeftOf="@+id/ivFoto"
            android:layout_toStartOf="@+id/ivFoto">

            <EditText
                android:id="@+id/txtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:maxLength="20" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/icoNombre"
            android:layout_width="@dimen/ico_dimens"
            android:layout_height="@dimen/ico_dimens"
            android:layout_alignBottom="@+id/tilNombre"
            android:layout_marginBottom="@dimen/ico_margin_B"
            android:layout_marginLeft="@dimen/ico_margin"
            android:layout_marginStart="@dimen/ico_margin"
            android:src="@drawable/ic_action_person" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tilNombre"
            android:layout_marginLeft="@dimen/text_marginLeft"
            android:layout_marginStart="@dimen/text_marginLeft"
            android:layout_marginTop="@dimen/text_marginTop"
            android:layout_toLeftOf="@+id/ivFoto"
            android:layout_toStartOf="@+id/ivFoto">

            <EditText
                android:id="@+id/txtEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/age"
                android:maxLength="13"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilTelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tilEdad"
            android:layout_marginLeft="@dimen/text_marginLeft"
            android:layout_marginStart="@dimen/text_marginLeft"
            android:layout_marginTop="@dimen/text_marginTop"
            android:layout_toLeftOf="@+id/ivFoto"
            android:layout_toStartOf="@+id/ivFoto">

            <EditText
                android:id="@+id/txtTelf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phone"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/icoTelf"
            android:layout_width="@dimen/ico_dimens"
            android:layout_height="@dimen/ico_dimens"
            android:layout_alignBottom="@+id/tilTelf"
            android:layout_marginBottom="@dimen/ico_margin_B"
            android:layout_marginLeft="@dimen/ico_margin"
            android:layout_marginStart="@dimen/ico_margin"
            android:src="@drawable/ic_action_telf" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tilTelf"
            android:layout_marginLeft="@dimen/text_marginLeft"
            android:layout_marginStart="@dimen/text_marginLeft"
            android:layout_marginTop="@dimen/text_marginTop"
            android:layout_toLeftOf="@+id/ivFoto"
            android:layout_toStartOf="@+id/ivFoto">

            <EditText
                android:id="@+id/txtCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mail"
                android:inputType="textEmailAddress" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/icoCorreo"
            android:layout_width="@dimen/ico_dimens"
            android:layout_height="@dimen/ico_dimens"
            android:layout_alignBottom="@+id/tilCorreo"
            android:layout_marginBottom="@dimen/ico_margin_B"
            android:layout_marginLeft="@dimen/ico_margin"
            android:layout_marginStart="@dimen/ico_margin"
            android:src="@drawable/ic_action_email" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilLocalidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tilCorreo"
            android:layout_marginLeft="@dimen/text_marginLeft"
            android:layout_marginStart="@dimen/text_marginLeft"
            android:layout_marginTop="@dimen/text_marginTop"
            android:layout_toLeftOf="@+id/ivFoto"
            android:layout_toStartOf="@+id/ivFoto">

            <EditText
                android:id="@+id/txtLocalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/locality"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/icoLocalidad"
            android:layout_width="@dimen/ico_dimens"
            android:layout_height="@dimen/ico_dimens"
            android:layout_alignBottom="@+id/tilLocalidad"
            android:layout_marginBottom="@dimen/ico_margin_B"
            android:layout_marginLeft="@dimen/ico_margin"
            android:layout_marginStart="@dimen/ico_margin"
            android:src="@drawable/ic_action_place" />
    </RelativeLayout>
</ScrollView>