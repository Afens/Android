<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Sincronizacion">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="prefSincronizar"
            android:summary="Sincronizar Detalles"
            android:title="Sincronizar" />
        <ListPreference
            android:defaultValue="@string/tipo_conexion_default"
            android:dependency="prefSincronizar"
            android:dialogTitle="Tipo Conexion"
            android:entries="@array/tipo_conexion_entries"
            android:entryValues="@array/tipo_conexion_values"
            android:key="prefTipoConexion"
            android:title="Tipo conexion" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Apariencia">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="prefLetrasGrandes"
            android:summary="Letras Grandes Detalles"
            android:title="Letras Grandes" />

    </PreferenceCategory>
</PreferenceScreen>